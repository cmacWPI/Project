<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".HistoryPage">

    <ImageView
        android:id="@+id/orderHistory1"
        android:layout_width="500dp"
        android:layout_height="168dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/order_history_1" />

    <EditText
        android:id="@+id/recentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#11000000"
        android:drawableLeft="@android:drawable/ic_menu_today"
        android:ems="10"
        android:focusable="false"
        android:paddingLeft="10dp"
        android:text="Recent Orders"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/orderView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#66000000"
        android:orientation="vertical"></LinearLayout>

    <Button
        android:id="@+id/goBack_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:text="@string/backMain_btn"
        android:textStyle="bold" />


</LinearLayout>