<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Checkout">


    <ImageView
        android:id="@+id/cSummary"
        android:layout_width="300dp"
        android:layout_height="168dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/checkoutlogo" />


    <LinearLayout
        android:id="@+id/orderNumView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orderNumText"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Order Number: "
            android:textAlignment="center"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/orderNumData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_horizontal"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/orderStatusView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orderStatusText"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Order Status: "
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/orderStatus"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:background="#11000000"
            android:focusable="false"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_action_search"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btitleText"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Book TItle"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/titleStatus"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:focusable="false"
            android:gravity="center"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/priceView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bpriceText"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Price"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/priceStatus"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:focusable="false"
            android:gravity="center"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/goBack_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:text="@string/backMain_btn"
        android:textStyle="bold" />


</LinearLayout>